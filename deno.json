{
	"$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
	"compilerOptions": {
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"checkJs": true,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"types": ["node"]
	},
	"fmt": {
		"indentWidth": 2,
		"lineWidth": 100,
		"proseWrap": "never",
		"semiColons": false,
		"singleQuote": true,
		"useTabs": true
	},
	"license": "UNLICENSED",
	"lock": {
		"frozen": false,
		"lockfile": "deno.lock"
	},
	"nodeModulesDir": "auto",
	"tasks": {
		"check": {
			"command": "biome check",
			"description": "Runs formatter, linter and import sorting to the requested files."
		},
		"format": {
			"command": "biome format",
			"description": "Run the formatter on a set of files."
		},
		"lint": {
			"command": "biome lint",
			"description": "Run various lint checks on a set of files."
		},
		"test": {
			"command": "vitest",
			"description": "Run tests"
		}
	},
	"workspace": ["./packages/resume", "./packages/schema-resume"]
}
