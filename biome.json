{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"ignore": [
			"node_modules",
			".pnpm",
			"./~"
		]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true,
		"root": "."
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf",
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"nursery": {
				"all": true,
				"noSecrets": "off",
				"useExplicitType": {
					"level": "off"
				}
			},
			"style": {
				"all": true,
				"noNamespaceImport": {
					"level": "off"
				}
			},
			"performance": {
				"all": true,
				"noBarrelFile": {
					"level": "off"
				},
				"noReExportAll": {
					"level": "off"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingCommas": "all",
			"attributePosition": "multiline"
		}
	},
	"overrides": [
		{
			"include": [
				"**/*.snapshot.json"
			],
			"formatter": {
				"enabled": false
			}
		}
	]
}
