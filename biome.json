{
	"$schema": "https://biomejs.dev/schemas/2.0.0-beta.6/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on",
				"recommended": true,
				"useSortedKeys": "on"
			}
		},
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"expand": "auto",
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"javascript": {
		"assist": {
			"enabled": true
		},
		"formatter": {
			"arrowParentheses": "asNeeded",
			"attributePosition": "multiline",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"enabled": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		},
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"linter": {
		"domains": {
			"project": "recommended",
			"test": "recommended"
		},
		"enabled": true,
		"rules": {
			"a11y": {
				"recommended": true
			},
			"complexity": {
				"recommended": true
			},
			"correctness": {
				"noUndeclaredDependencies": "off",
				"noUndeclaredVariables": "off",
				"recommended": true
			},
			"nursery": {
				"noSecrets": "off",
				"recommended": true,
				"useExplicitType": {
					"level": "off"
				}
			},
			"performance": {
				"noBarrelFile": {
					"level": "off"
				},
				"noNamespaceImport": {
					"level": "off"
				},
				"noReExportAll": {
					"level": "off"
				},
				"recommended": true
			},
			"recommended": true,
			"security": {
				"recommended": true
			},
			"style": {
				"noInferrableTypes": "on",
				"noParameterAssign": "on",
				"noUnusedTemplateLiteral": "on",
				"noUselessElse": "on",
				"recommended": true,
				"useAsConstAssertion": "on",
				"useDefaultParameterLast": "on",
				"useEnumInitializers": "on",
				"useNumberNamespace": "on",
				"useSelfClosingElements": "on",
				"useSingleVarDeclarator": "on"
			},
			"suspicious": {
				"recommended": true
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"defaultBranch": "main",
		"enabled": true,
		"root": ".",
		"useIgnoreFile": true
	}
}
