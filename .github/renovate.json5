{
	$schema: 'https://docs.renovatebot.com/renovate-schema.json',
	configMigration: true,
	extends: [
		'config:recommended',
		':pinDevDependencies',
		'group:monorepos',
		'group:recommended',
		"regexManagers:biomeVersions",
		'replacements:all',
		'workarounds:all',
		':followTag(typescript, rc)',
		'schedule:earlyMondays'
	],
	labels: [
		'dependencies'
	],
	npmrcMerge: true,
	dockerfile: {
		enabled: true
	},
	packageRules: [
		{
			matchPackagePatterns: [
				'^effect$',
				'^@effect/'
			],
			groupName: 'effect packages'
		}
	]
}
