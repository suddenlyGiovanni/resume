{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"extends": [
		"../../biome.json"
	],
	"files": {
		"include": [
			"./src/**/*",
			"./test/**/*"
		]
	},
	"overrides": [
		{
			"include": [
				"**/*.snapshot.json"
			],
			"formatter": {
				"enabled": false
			}
		},
		{
			"include": [
				"src/test/test-utils.ts"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	]
}
