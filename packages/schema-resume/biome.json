{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"extends": ["../../biome.json"],
	"files": {
		"include": ["./src/**/*", "./test/**/*"],
		"ignore": ["./src/**/*.snapshot.json"]
	},
	"overrides": [
		{
			"include": ["**/*.snapshot.json"],
			"formatter": {
				"enabled": false
			}
		},
		{
			"include": ["src/test/test-utils.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		}
	]
}
