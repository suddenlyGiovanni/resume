{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./lib",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"inlineSourceMap": false,
		"noEmit": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/test/", "src/**/*.spec.ts"]
}
