{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs": {
		"Certificate": {
			"type": "object",
			"required": [],
			"properties": {
				"date": {
					"$ref": "#/$defs/StringDate",
					"title": "date"
				},
				"issuer": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "issuer of the certificate",
					"title": "issuer",
					"examples": [
						"e.g. CNCF"
					]
				},
				"name": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "name of the certificate",
					"title": "Name",
					"examples": [
						"e.g. Certified Kubernetes Administrator"
					]
				},
				"url": {
					"$ref": "#/$defs/UrlString",
					"description": "the url of the certificate",
					"title": "url",
					"examples": [
						"http://example.com/cert.pdf"
					]
				}
			},
			"additionalProperties": false
		},
		"StringDate": {
			"type": "string",
			"description": "a string that is a valid YYYY-MM-DD date",
			"title": "StringDate",
			"format": "date",
			"maxLength": 10,
			"minLength": 10
		},
		"NonEmptyTrimmedString": {
			"type": "string",
			"description": "a non empty string",
			"title": "nonEmptyString",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"minLength": 1
		},
		"UrlString": {
			"type": "string",
			"description": "a string that fulfills the URL requirements (as per RFC 3986)",
			"title": "UrlString",
			"examples": [
				"https://example.com",
				"https://example.com/#section",
				"http://example.com:8080",
				"http://üçåüçåüçå.ws",
				"https://www.√ºbercool.de"
			],
			"format": "uri"
		}
	},
	"$ref": "#/$defs/Certificate"
}