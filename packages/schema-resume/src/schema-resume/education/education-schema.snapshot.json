{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs": {
		"Education": {
			"type": "object",
			"required": [
				"area",
				"institution",
				"startDate",
				"studyType"
			],
			"properties": {
				"area": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "e.g. Arts",
					"title": "area",
					"examples": [
						"Arts",
						"Computer Science"
					]
				},
				"courses": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/NonEmptyTrimmedString"
					},
					"description": "List notable courses/subjects",
					"title": "courses",
					"examples": [
						[
							"CS50",
							"H1302 - Introduction to American history"
						]
					]
				},
				"endDate": {
					"$ref": "#/$defs/StringDate",
					"description": "end date of education",
					"title": "endDate",
					"examples": [
						"2020-01-01"
					]
				},
				"institution": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "name of the institution",
					"title": "institution",
					"examples": [
						"Massachusetts Institute of Technology"
					]
				},
				"location": {
					"$ref": "#/$defs/TrimmedNonEmpty"
				},
				"score": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "grade point average, e.g. 3.67/4.0",
					"title": "score",
					"examples": [
						"3.67/4.0"
					]
				},
				"startDate": {
					"$ref": "#/$defs/StringDate",
					"description": "start date of education",
					"title": "startDate",
					"examples": [
						"1970-01-01T00:00"
					]
				},
				"studyType": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "the type of study",
					"title": "studyType",
					"examples": [
						"Bachelor",
						"Master",
						"Doctorate"
					]
				},
				"url": {
					"$ref": "#/$defs/UrlString",
					"description": "URL (as per RFC 3986) of the institution",
					"title": "url",
					"examples": [
						"http://mit.com"
					]
				}
			},
			"additionalProperties": false
		},
		"NonEmptyTrimmedString": {
			"type": "string",
			"description": "a non empty string",
			"title": "nonEmptyString",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"minLength": 1
		},
		"StringDate": {
			"type": "string",
			"description": "a string that is a valid YYYY-MM-DD date",
			"title": "StringDate",
			"format": "date",
			"maxLength": 10,
			"minLength": 10
		},
		"TrimmedNonEmpty": {
			"type": "string",
			"description": "a non-empty string with no leading or trailing whitespace",
			"title": "TrimmedNonEmpty",
			"minLength": 1,
			"pattern": "^[^\\s].*[^\\s]$"
		},
		"UrlString": {
			"type": "string",
			"description": "a string that fulfills the URL requirements (as per RFC 3986)",
			"title": "UrlString",
			"examples": [
				"https://example.com",
				"https://example.com/#section",
				"http://example.com:8080",
				"http://üçåüçåüçå.ws",
				"https://www.√ºbercool.de"
			],
			"format": "uri"
		}
	},
	"$ref": "#/$defs/Education"
}