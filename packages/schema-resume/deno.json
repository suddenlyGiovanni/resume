{
	"$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
	"exports": "./src/index.ts",
	"license": "MIT",
	"name": "@suddenly-giovanni/schema-resume",
	"publish": {
		"include": [
			"README.md",
			"src/**/*.ts"
		],
		"exclude": [
			"package.json",
			"src/test",
			"src/**/*.spec.ts"
		]
	},
	"imports": {
		"@types/json-schema": "npm:@types/json-schema@7.0.15",
		"effect": "npm:effect@^3.14.10"
	},
	"tasks": {
		"build": {
			"command": "tsdown",
			"description": "Build the library for production"
		},
		"check": {
			"command": "biome check",
			"description": "Runs formatter, linter and import sorting to the requested files."
		},
		"format": {
			"command": "biome format",
			"description": "Run the formatter on a set of files."
		},
		"lint": {
			"command": "biome lint",
			"description": "Run various lint checks on a set of files."
		},
		"lint:ci": {
			"command": "biome ci --formatter-enabled=false --linter-enabled=true --organize-imports-enabled=false --no-errors-on-unmatched .",
			"description": "Lint all files in CI"
		},
		"test": {
			"command": "vitest",
			"description": "Run tests using Vitest"
		},
		"typecheck": {
			"command": "deno check .",
			"description": "Typecheck all files"
		}
	},
	"version": "0.0.7"
}
