{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"author": {
		"name": "Giovanni Ravalico",
		"email": "15946771+suddenlygiovanni@users.noreply.github.com",
		"url": "https://www.suddenlygiovanni.dev/resume"
	},
	"exports": {
		".": "./src/index.ts"
	},
	"imports": {
		"#*": "./src/*",
		"@types/json-schema": "npm:@types/json-schema@7.0.15",
		"@types/node": "npm:@types/node@22.10.5",
		"effect": "npm:effect@3.12.7"
	},
	"license": "MIT",
	"name": "@suddenlygiovanni/schema-resume",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/suddenlyGiovanni/resume.git"
	},
	"tasks": {
		"format": {
			"description": "Format all files",
			"command": "deno run npm:biome check --vcs-enabled=true --vcs-use-ignore-file=true --vcs-root='../../' --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true ."
		},
		"format:write": {
			"description": "Format all files and write changes",
			"command": "deno run npm:biome check --vcs-enabled=true --vcs-use-ignore-file=true --vcs-root='../../' --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true --write ."
		},
		"lint": {
			"command": "biome check .",
			"description": "Lint all files"
		},
		"lint:ci": {
			"description": "Lint all files in CI",
			"command": "biome ci --formatter-enabled=false --linter-enabled=true --organize-imports-enabled=false --no-errors-on-unmatched ."
		},
		"lint:write": {
			"description": "Lint all files and write changes",
			"command": "biome check --apply ."
		},
		"test": {
			"command": "deno run -A npm:vitest@3.0.4",
			"description": "Run tests"
		},
		"typecheck": {
			"description": "Typecheck all files",
			"command": "deno check ."
		}
	},
	"type": "module",
	"version": "14.0.1"
}
