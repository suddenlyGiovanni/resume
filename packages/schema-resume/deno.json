{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"exports": {
		".": "./src/index.ts"
	},
	"tasks": {
		"format": {
			"description": "Format all files",
			"command": "deno run --allow-env --allow-read --allow-sys npm:biome check --vcs-enabled=true --vcs-use-ignore-file=true --vcs-root='../../' --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true ."
		},
		"format:write": {
			"description": "Format all files and write changes",
			"command": "deno run --allow-env --allow-read --allow-sys npm:biome check --vcs-enabled=true --vcs-use-ignore-file=true --vcs-root='../../' --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true --write ."
		},
		"lint": {
			"command": "deno run --allow-env --allow-read --allow-sys npm:biome check .",
			"description": "Lint all files"
		},
		"lint:ci": {
			"description": "Lint all files in CI",
			"command": "deno run --allow-env --allow-read --allow-sys npm:biome ci --formatter-enabled=false --linter-enabled=true --organize-imports-enabled=false --no-errors-on-unmatched ."
		},
		"lint:write": {
			"description": "Lint all files and write changes",
			"command": "deno run --allow-env --allow-read --allow-sys npm:biome check --apply ."
		},
		"test": {
			"command": "deno run -A npm:vitest@3.0.4",
			"description": "Run tests"
		},
		"typecheck": {
			"description": "Typecheck all files",
			"command": "deno check ."
		}
	},
	"version": "14.0.1"
}
