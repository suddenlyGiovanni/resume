{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"description",
		"name",
		"startDate",
		"roles"
	],
	"properties": {
		"description": {
			"type": "string",
			"description": "A short description of the company",
			"title": "description",
			"examples": [
				"Social Media Company",
				"Educational Software Company"
			]
		},
		"endDate": {
			"type": "string",
			"description": "a string",
			"title": "string"
		},
		"location": {
			"type": "string",
			"description": "Location of the company",
			"title": "location",
			"examples": [
				"Menlo Park, CA"
			]
		},
		"name": {
			"type": "string",
			"description": "Name of the company",
			"title": "name",
			"examples": [
				"Facebook"
			]
		},
		"startDate": {
			"type": "string",
			"description": "a string",
			"title": "string"
		},
		"summary": {
			"type": "string",
			"description": "A brief introduction of what the company does; a tagline, a mission statement, an elevator pitch; something that gives a sense of the company in a few words",
			"title": "summary",
			"examples": [
				"An educational software company that helps students learn through interactive games",
				"Help users to handle all their administrative tasks digitally with ease."
			]
		},
		"url": {
			"$ref": "#/$defs/UrlString"
		},
		"contact": {
			"type": "object",
			"required": [
				"name",
				"email"
			],
			"properties": {
				"name": {
					"type": "string",
					"description": "The name and role of the contact person",
					"title": "name",
					"examples": [
						"Mark Zuckerberg (CTO)"
					]
				},
				"email": {
					"type": "string",
					"description": "a string",
					"title": "string"
				},
				"phone": {
					"type": "string",
					"description": "a string",
					"title": "string"
				}
			},
			"additionalProperties": false
		},
		"roles": {
			"type": "array",
			"minItems": 1,
			"items": [
				{
					"type": "object",
					"required": [
						"title",
						"startDate",
						"responsibilities"
					],
					"properties": {
						"title": {
							"type": "string",
							"description": "The title of your position at the company: <seniority level> <role title>",
							"title": "title",
							"examples": [
								"Junior Software Developer",
								"Senior Software Engineer"
							]
						},
						"startDate": {
							"type": "string",
							"description": "a string",
							"title": "string"
						},
						"endDate": {
							"type": "string",
							"description": "a string",
							"title": "string"
						},
						"responsibilities": {
							"type": "array",
							"items": {
								"type": "string",
								"description": "A specific responsibility",
								"title": "responsibility",
								"examples": [
									"code owner of x"
								]
							}
						},
						"highlights": {
							"type": "array",
							"minItems": 1,
							"items": [
								{
									"type": "string",
									"description": "A specific accomplishment",
									"title": "highlight",
									"examples": [
										"Increased profits by 20% from 2011-2012 through viral advertising"
									]
								}
							],
							"additionalItems": {
								"type": "string",
								"description": "A specific accomplishment",
								"title": "highlight",
								"examples": [
									"Increased profits by 20% from 2011-2012 through viral advertising"
								]
							}
						},
						"technologies": {
							"type": "array",
							"minItems": 1,
							"items": [
								{
									"type": "string",
									"description": "A specific technology used",
									"title": "technology",
									"examples": [
										"React",
										"Node.js"
									]
								}
							],
							"additionalItems": {
								"type": "string",
								"description": "A specific technology used",
								"title": "technology",
								"examples": [
									"React",
									"Node.js"
								]
							}
						}
					},
					"additionalProperties": false
				}
			],
			"additionalItems": {
				"type": "object",
				"required": [
					"title",
					"startDate",
					"responsibilities"
				],
				"properties": {
					"title": {
						"type": "string",
						"description": "The title of your position at the company: <seniority level> <role title>",
						"title": "title",
						"examples": [
							"Junior Software Developer",
							"Senior Software Engineer"
						]
					},
					"startDate": {
						"type": "string",
						"description": "a string",
						"title": "string"
					},
					"endDate": {
						"type": "string",
						"description": "a string",
						"title": "string"
					},
					"responsibilities": {
						"type": "array",
						"items": {
							"type": "string",
							"description": "A specific responsibility",
							"title": "responsibility",
							"examples": [
								"code owner of x"
							]
						}
					},
					"highlights": {
						"type": "array",
						"minItems": 1,
						"items": [
							{
								"type": "string",
								"description": "A specific accomplishment",
								"title": "highlight",
								"examples": [
									"Increased profits by 20% from 2011-2012 through viral advertising"
								]
							}
						],
						"additionalItems": {
							"type": "string",
							"description": "A specific accomplishment",
							"title": "highlight",
							"examples": [
								"Increased profits by 20% from 2011-2012 through viral advertising"
							]
						}
					},
					"technologies": {
						"type": "array",
						"minItems": 1,
						"items": [
							{
								"type": "string",
								"description": "A specific technology used",
								"title": "technology",
								"examples": [
									"React",
									"Node.js"
								]
							}
						],
						"additionalItems": {
							"type": "string",
							"description": "A specific technology used",
							"title": "technology",
							"examples": [
								"React",
								"Node.js"
							]
						}
					}
				},
				"additionalProperties": false
			}
		},
		"techStack": {
			"type": "array",
			"minItems": 1,
			"items": [
				{
					"$ref": "#/$defs/NonEmptyString"
				}
			],
			"additionalItems": {
				"$ref": "#/$defs/NonEmptyString"
			}
		}
	},
	"additionalProperties": false,
	"$defs": {
		"UrlString": {
			"type": "string",
			"description": "URL string that fulfills the URL requirements (as per RFC 3986)",
			"title": "url",
			"examples": [
				"https://example.com",
				"https://example.com/#section",
				"http://example.com:8080",
				"http://üçåüçåüçå.ws",
				"https://www.√ºbercool.de"
			]
		},
		"NonEmptyString": {
			"type": "string",
			"description": "a non empty string",
			"title": "non empty string",
			"examples": [
				"' test string  '",
				"'test string'"
			]
		}
	}
}