{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [],
	"properties": {
		"keywords": {
			"type": "array",
			"items": {
				"type": "string",
				"description": "a non empty string",
				"title": "keyword",
				"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
				"examples": [
					"philosophy"
				],
				"minLength": 1
			},
			"description": "List some keywords pertaining to this interest",
			"title": "keywords",
			"examples": [
				[
					"philosophy",
					"distributed systems"
				]
			]
		},
		"name": {
			"type": "string",
			"description": "Interest name",
			"title": "name",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"examples": [
				"Philosophy"
			],
			"minLength": 1
		}
	},
	"additionalProperties": false
}