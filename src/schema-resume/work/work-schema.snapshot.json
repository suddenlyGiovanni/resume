{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$defs": {
    "Work": {
      "type": "object",
      "required": [
        "description",
        "name",
        "roles"
      ],
      "properties": {
        "contact": {
          "type": "object",
          "required": [
            "name",
            "email"
          ],
          "properties": {
            "name": {
              "$ref": "#/$defs/NonEmptyTrimmedString",
              "description": "The name and role of the contact person",
              "title": "name",
              "examples": [
                "Mark Zuckerberg (CTO)"
              ]
            },
            "email": {
              "$ref": "#/$defs/Email"
            },
            "phone": {
              "$ref": "#/$defs/PhoneString"
            }
          },
          "additionalProperties": false
        },
        "description": {
          "$ref": "#/$defs/TrimmedNonEmpty",
          "description": "A short description of the company",
          "title": "description",
          "examples": [
            "Social Media Company",
            "Educational Software Company"
          ]
        },
        "location": {
          "$ref": "#/$defs/NonEmptyTrimmedString",
          "description": "Location of the company",
          "title": "location",
          "examples": [
            "Menlo Park, CA"
          ]
        },
        "name": {
          "$ref": "#/$defs/NonEmptyTrimmedString",
          "description": "Name of the company",
          "title": "name",
          "examples": [
            "Facebook"
          ]
        },
        "roles": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/Role"
          },
          "description": "The roles you had at the company, in reverse chronological order",
          "title": "roles"
        },
        "summary": {
          "$ref": "#/$defs/TrimmedNonEmpty",
          "description": "A brief introduction of what the company does; a tagline, a mission statement, an elevator pitch; something that gives a sense of the company in a few words",
          "title": "summary",
          "examples": [
            "An educational software company that helps students learn through interactive games",
            "Help users to handle all their administrative tasks digitally with ease."
          ]
        },
        "url": {
          "$ref": "#/$defs/UrlString"
        }
      },
      "additionalProperties": false
    },
    "NonEmptyTrimmedString": {
      "type": "string",
      "description": "a non empty string",
      "title": "nonEmptyString",
      "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
      "minLength": 1
    },
    "Email": {
      "type": "string",
      "description": "an Email address string matching the pattern ^(?!\\.)(?!.*\\.\\.)([A-Z0-9_+-.]*)[A-Z0-9_+-]@([A-Z0-9][A-Z0-9-]*\\.)+[A-Z]{2,}$",
      "title": "Email",
      "examples": [
        "<local-part>@<domain>",
        "foo@bar.com",
        "foo.bar@baz.com"
      ],
      "format": "email",
      "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Z0-9_+-.]*)[A-Z0-9_+-]@([A-Z0-9][A-Z0-9-]*\\.)+[A-Z]{2,}$"
    },
    "PhoneString": {
      "type": "string",
      "description": "a phone number conforming to the E.164 format standard",
      "title": "PhoneString",
      "examples": [
        "+4907121172923",
        "+441632960961",
        "+353861234567",
        "00353861234567",
        "+39 02 1234567",
        "+1-800-123-4567",
        "+1 800 123 4567",
        "+49 (0) 216 554 1036"
      ],
      "pattern": "^\\+[1-9]\\d{1,14}$"
    },
    "TrimmedNonEmpty": {
      "type": "string",
      "description": "a non-empty string with no leading or trailing whitespace",
      "title": "TrimmedNonEmpty",
      "minLength": 1,
      "pattern": "^[^\\s].*[^\\s]$"
    },
    "Role": {
      "type": "object",
      "required": [
        "title",
        "startDate",
        "responsibilities"
      ],
      "properties": {
        "title": {
          "$ref": "#/$defs/NonEmptyTrimmedString",
          "description": "The title of your position at the company: <seniority level> <role title>",
          "title": "title",
          "examples": [
            "Junior Software Developer",
            "Senior Software Engineer"
          ]
        },
        "startDate": {
          "$ref": "#/$defs/StringDate",
          "description": "The date when you started working in this role",
          "title": "startDate",
          "examples": [
            "2011-01-01"
          ]
        },
        "endDate": {
          "$ref": "#/$defs/StringDate",
          "description": "The date when you stopped working in this role",
          "title": "endDate",
          "examples": [
            "2012-01-01"
          ]
        },
        "responsibilities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/TrimmedNonEmpty"
          },
          "description": "Specify multiple responsibilities",
          "title": "responsibilities",
          "examples": [
            [
              "code owner of x"
            ]
          ]
        },
        "highlights": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/TrimmedNonEmpty"
          },
          "description": "Specify multiple accomplishments",
          "title": "highlights",
          "examples": [
            [
              "Increased profits by 20% from 2011-2012 through viral advertising"
            ]
          ]
        },
        "technologies": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/NonEmptyTrimmedString"
          },
          "description": "Specify multiple technologies used",
          "title": "technologies",
          "examples": [
            [
              "React",
              "Node.js"
            ]
          ]
        }
      },
      "additionalProperties": false
    },
    "StringDate": {
      "type": "string",
      "description": "a string that is a valid YYYY-MM-DD date",
      "title": "StringDate",
      "minLength": 10,
      "maxLength": 10,
      "format": "date"
    },
    "UrlString": {
      "type": "string",
      "description": "a string that fulfills the URL requirements (as per RFC 3986)",
      "title": "UrlString",
      "examples": [
        "https://example.com",
        "https://example.com/#section",
        "http://example.com:8080",
        "http://üçåüçåüçå.ws",
        "https://www.√ºbercool.de"
      ],
      "format": "uri"
    }
  },
  "$ref": "#/$defs/Work"
}