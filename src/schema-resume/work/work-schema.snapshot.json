{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "description",
    "name",
    "roles"
  ],
  "properties": {
    "contact": {
      "type": "object",
      "required": [
        "name",
        "email"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name and role of the contact person",
          "title": "name",
          "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
          "examples": [
            "Mark Zuckerberg (CTO)"
          ],
          "minLength": 1
        },
        "email": {
          "type": "string",
          "description": "an Email address string matching the pattern ^(?!\\.)(?!.*\\.\\.)([A-Z0-9_+-.]*)[A-Z0-9_+-]@([A-Z0-9][A-Z0-9-]*\\.)+[A-Z]{2,}$",
          "title": "Email",
          "examples": [
            "<local-part>@<domain>",
            "foo@bar.com",
            "foo.bar@baz.com"
          ],
          "format": "email",
          "pattern": "^(?!\\.)(?!.*\\.\\.)([A-Z0-9_+-.]*)[A-Z0-9_+-]@([A-Z0-9][A-Z0-9-]*\\.)+[A-Z]{2,}$"
        },
        "phone": {
          "type": "string",
          "description": "a phone number conforming to the E.164 format standard",
          "title": "PhoneString",
          "examples": [
            "+4907121172923",
            "+441632960961",
            "+353861234567",
            "00353861234567",
            "+39 02 1234567",
            "+1-800-123-4567",
            "+1 800 123 4567",
            "+49 (0) 216 554 1036"
          ],
          "pattern": "^\\+[1-9]\\d{1,14}$"
        }
      },
      "additionalProperties": false
    },
    "description": {
      "type": "string",
      "description": "A short description of the company",
      "title": "description",
      "examples": [
        "Social Media Company",
        "Educational Software Company"
      ],
      "minLength": 1,
      "pattern": "^[^\\s].*[^\\s]$"
    },
    "location": {
      "type": "string",
      "description": "Location of the company",
      "title": "location",
      "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
      "examples": [
        "Menlo Park, CA"
      ],
      "minLength": 1
    },
    "name": {
      "type": "string",
      "description": "Name of the company",
      "title": "name",
      "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
      "examples": [
        "Facebook"
      ],
      "minLength": 1
    },
    "roles": {
      "type": "array",
      "minItems": 1,
      "items": [
        {
          "type": "object",
          "required": [
            "title",
            "startDate",
            "responsibilities"
          ],
          "properties": {
            "title": {
              "type": "string",
              "description": "The title of your position at the company: <seniority level> <role title>",
              "title": "title",
              "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
              "examples": [
                "Junior Software Developer",
                "Senior Software Engineer"
              ],
              "minLength": 1
            },
            "startDate": {
              "type": "string",
              "description": "The date when you started working in this role",
              "title": "startDate",
              "examples": [
                "2011-01-01"
              ],
              "minLength": 10,
              "maxLength": 10,
              "format": "date"
            },
            "endDate": {
              "type": "string",
              "description": "The date when you stopped working in this role",
              "title": "endDate",
              "examples": [
                "2012-01-01"
              ],
              "minLength": 10,
              "maxLength": 10,
              "format": "date"
            },
            "responsibilities": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "A specific responsibility",
                "title": "responsibility",
                "examples": [
                  "code owner of x"
                ],
                "minLength": 1,
                "pattern": "^[^\\s].*[^\\s]$"
              },
              "description": "Specify multiple responsibilities",
              "title": "responsibilities"
            },
            "highlights": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "description": "A specific accomplishment",
                "title": "highlight",
                "examples": [
                  "Increased profits by 20% from 2011-2012 through viral advertising"
                ],
                "minLength": 1,
                "pattern": "^[^\\s].*[^\\s]$"
              },
              "description": "Specify multiple accomplishments",
              "title": "highlights"
            },
            "technologies": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "description": "A specific technology used",
                "title": "technology",
                "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
                "examples": [
                  "React",
                  "Node.js"
                ],
                "minLength": 1
              },
              "description": "Specify multiple technologies used",
              "title": "technologies"
            }
          },
          "additionalProperties": false
        }
      ],
      "additionalItems": {
        "type": "object",
        "required": [
          "title",
          "startDate",
          "responsibilities"
        ],
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of your position at the company: <seniority level> <role title>",
            "title": "title",
            "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
            "examples": [
              "Junior Software Developer",
              "Senior Software Engineer"
            ],
            "minLength": 1
          },
          "startDate": {
            "type": "string",
            "description": "The date when you started working in this role",
            "title": "startDate",
            "examples": [
              "2011-01-01"
            ],
            "minLength": 10,
            "maxLength": 10,
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "description": "The date when you stopped working in this role",
            "title": "endDate",
            "examples": [
              "2012-01-01"
            ],
            "minLength": 10,
            "maxLength": 10,
            "format": "date"
          },
          "responsibilities": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "A specific responsibility",
              "title": "responsibility",
              "examples": [
                "code owner of x"
              ],
              "minLength": 1,
              "pattern": "^[^\\s].*[^\\s]$"
            },
            "description": "Specify multiple responsibilities",
            "title": "responsibilities"
          },
          "highlights": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "description": "A specific accomplishment",
              "title": "highlight",
              "examples": [
                "Increased profits by 20% from 2011-2012 through viral advertising"
              ],
              "minLength": 1,
              "pattern": "^[^\\s].*[^\\s]$"
            },
            "description": "Specify multiple accomplishments",
            "title": "highlights"
          },
          "technologies": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "description": "A specific technology used",
              "title": "technology",
              "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
              "examples": [
                "React",
                "Node.js"
              ],
              "minLength": 1
            },
            "description": "Specify multiple technologies used",
            "title": "technologies"
          }
        },
        "additionalProperties": false
      },
      "description": "The roles you had at the company, in reverse chronological order",
      "title": "roles"
    },
    "summary": {
      "type": "string",
      "description": "A brief introduction of what the company does; a tagline, a mission statement, an elevator pitch; something that gives a sense of the company in a few words",
      "title": "summary",
      "examples": [
        "An educational software company that helps students learn through interactive games",
        "Help users to handle all their administrative tasks digitally with ease."
      ],
      "minLength": 1,
      "pattern": "^[^\\s].*[^\\s]$"
    },
    "url": {
      "type": "string",
      "description": "a string that fulfills the URL requirements (as per RFC 3986)",
      "title": "UrlString",
      "examples": [
        "https://example.com",
        "https://example.com/#section",
        "http://example.com:8080",
        "http://üçåüçåüçå.ws",
        "https://www.√ºbercool.de"
      ],
      "format": "uri"
    }
  },
  "additionalProperties": false
}