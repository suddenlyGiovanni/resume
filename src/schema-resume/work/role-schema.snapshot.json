{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"title",
		"startDate",
		"responsibilities"
	],
	"properties": {
		"title": {
			"type": "string",
			"description": "The title of your position at the company: <seniority level> <role title>",
			"title": "title",
			"examples": [
				"Junior Software Developer",
				"Senior Software Engineer"
			],
			"minLength": 1,
			"pattern": "^[^\\s].*[^\\s]$"
		},
		"startDate": {
			"type": "string",
			"description": "The date when you started working in this role",
			"title": "startDate",
			"examples": [
				"2011-01-01"
			],
			"minLength": 10,
			"maxLength": 10,
			"format": "date"
		},
		"endDate": {
			"type": "string",
			"description": "The date when you stopped working in this role",
			"title": "endDate",
			"examples": [
				"2012-01-01"
			],
			"minLength": 10,
			"maxLength": 10,
			"format": "date"
		},
		"responsibilities": {
			"type": "array",
			"items": {
				"type": "string",
				"description": "A specific responsibility",
				"title": "responsibility",
				"examples": [
					"code owner of x"
				],
				"minLength": 1,
				"pattern": "^[^\\s].*[^\\s]$"
			},
			"description": "Specify multiple responsibilities",
			"title": "responsibilities"
		},
		"highlights": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"description": "A specific accomplishment",
				"title": "highlight",
				"examples": [
					"Increased profits by 20% from 2011-2012 through viral advertising"
				],
				"minLength": 1,
				"pattern": "^[^\\s].*[^\\s]$"
			},
			"description": "Specify multiple accomplishments",
			"title": "highlights"
		},
		"technologies": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"description": "A specific technology used",
				"title": "technology",
				"examples": [
					"React",
					"Node.js"
				],
				"minLength": 1,
				"pattern": "^[^\\s].*[^\\s]$"
			},
			"description": "Specify multiple technologies used",
			"title": "technologies"
		}
	},
	"additionalProperties": false
}