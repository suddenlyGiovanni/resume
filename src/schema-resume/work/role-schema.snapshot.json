{
	"$ref": "#/$defs/Role",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs": {
		"Role": {
			"type": "object",
			"required": [
				"title",
				"startDate",
				"responsibilities"
			],
			"properties": {
				"title": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "The title of your position at the company: <seniority level> <role title>",
					"title": "title",
					"examples": [
						"Junior Software Developer",
						"Senior Software Engineer"
					]
				},
				"startDate": {
					"$ref": "#/$defs/StringDate",
					"description": "The date when you started working in this role",
					"title": "startDate",
					"examples": [
						"2011-01-01"
					]
				},
				"endDate": {
					"$ref": "#/$defs/StringDate",
					"description": "The date when you stopped working in this role",
					"title": "endDate",
					"examples": [
						"2012-01-01"
					]
				},
				"responsibilities": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/TrimmedNonEmpty"
					},
					"description": "Specify multiple responsibilities",
					"title": "responsibilities",
					"examples": [
						[
							"code owner of x"
						]
					]
				},
				"highlights": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/$defs/TrimmedNonEmpty"
					},
					"description": "Specify multiple accomplishments",
					"title": "highlights",
					"examples": [
						[
							"Increased profits by 20% from 2011-2012 through viral advertising"
						]
					]
				},
				"technologies": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/$defs/NonEmptyTrimmedString"
					},
					"description": "Specify multiple technologies used",
					"title": "technologies",
					"examples": [
						[
							"React",
							"Node.js"
						]
					]
				}
			},
			"additionalProperties": false
		},
		"NonEmptyTrimmedString": {
			"type": "string",
			"description": "a non empty string",
			"title": "NonEmptyTrimmedString",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"minLength": 1
		},
		"StringDate": {
			"type": "string",
			"description": "a string that is a valid YYYY-MM-DD date",
			"title": "StringDate",
			"minLength": 10,
			"maxLength": 10,
			"format": "date"
		},
		"TrimmedNonEmpty": {
			"type": "string",
			"description": "a non-empty string with no leading or trailing whitespace",
			"title": "TrimmedNonEmpty",
			"minLength": 1,
			"pattern": "^[^\\s].*[^\\s]$"
		}
	}
}