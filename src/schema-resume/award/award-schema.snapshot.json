{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [],
  "properties": {
    "awarder": {
      "type": "string",
      "description": "The name of the award given",
      "title": "awarder",
      "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
      "examples": [
        "Time Magazine"
      ],
      "minLength": 1
    },
    "date": {
      "type": "string",
      "description": "Date of the award",
      "title": "date",
      "minLength": 10,
      "maxLength": 10,
      "format": "date"
    },
    "summary": {
      "type": "string",
      "description": "A brief summary of the award",
      "title": "summary",
      "examples": [
        "Received for my work with Quantum Physics"
      ],
      "minLength": 1,
      "pattern": "^[^\\s].*[^\\s]$"
    },
    "title": {
      "type": "string",
      "description": "Title of the award",
      "title": "title",
      "pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
      "examples": [
        "One of the 100 greatest minds of the century"
      ],
      "minLength": 1
    }
  },
  "additionalProperties": false
}