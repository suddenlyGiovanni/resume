{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs": {
		"Publication": {
			"type": "object",
			"required": [],
			"properties": {
				"name": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "The name of the publication",
					"title": "name",
					"examples": [
						"The World Wide Web"
					]
				},
				"publisher": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "The publisher of the publication",
					"title": "publisher",
					"examples": [
						"IEEE",
						"Computer Magazine"
					]
				},
				"releaseDate": {
					"$ref": "#/$defs/StringDate"
				},
				"summary": {
					"$ref": "#/$defs/TrimmedNonEmpty",
					"description": "Short summary of publication",
					"title": "summary",
					"examples": [
						"Discussion of the World Wide Web, HTTP, HTML"
					]
				},
				"url": {
					"$ref": "#/$defs/UrlString",
					"description": "URL (as per RFC 3986) to the publication",
					"title": "url",
					"examples": [
						"http://www.computer.org.example.com/csdl/mags/co/1996/10/rx069-abs.html"
					]
				}
			},
			"additionalProperties": false
		},
		"NonEmptyTrimmedString": {
			"type": "string",
			"description": "a non empty string",
			"title": "nonEmptyString",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"minLength": 1
		},
		"StringDate": {
			"type": "string",
			"description": "a string that is a valid YYYY-MM-DD date",
			"title": "StringDate",
			"minLength": 10,
			"maxLength": 10,
			"format": "date"
		},
		"TrimmedNonEmpty": {
			"type": "string",
			"description": "a non-empty string with no leading or trailing whitespace",
			"title": "TrimmedNonEmpty",
			"minLength": 1,
			"pattern": "^[^\\s].*[^\\s]$"
		},
		"UrlString": {
			"type": "string",
			"description": "a string that fulfills the URL requirements (as per RFC 3986)",
			"title": "UrlString",
			"examples": [
				"https://example.com",
				"https://example.com/#section",
				"http://example.com:8080",
				"http://üçåüçåüçå.ws",
				"https://www.√ºbercool.de"
			],
			"format": "uri"
		}
	},
	"$ref": "#/$defs/Publication"
}