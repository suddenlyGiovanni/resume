{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$defs": {
		"Profile": {
			"type": "object",
			"required": [
				"network",
				"url",
				"username"
			],
			"properties": {
				"network": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "The name of the social network",
					"title": "network",
					"examples": [
						"Facebook",
						"Twitter"
					]
				},
				"url": {
					"$ref": "#/$defs/UrlString",
					"description": "The URL of the profile on the social network",
					"title": "url",
					"examples": [
						"http://twitter.example.com/neutralthoughts"
					]
				},
				"username": {
					"$ref": "#/$defs/NonEmptyTrimmedString",
					"description": "The username of the profile on the social network",
					"title": "username",
					"examples": [
						"neutralthoughts"
					]
				}
			},
			"additionalProperties": false
		},
		"NonEmptyTrimmedString": {
			"type": "string",
			"description": "a non empty string",
			"title": "nonEmptyString",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"minLength": 1
		},
		"UrlString": {
			"type": "string",
			"description": "a string that fulfills the URL requirements (as per RFC 3986)",
			"title": "UrlString",
			"examples": [
				"https://example.com",
				"https://example.com/#section",
				"http://example.com:8080",
				"http://üçåüçåüçå.ws",
				"https://www.√ºbercool.de"
			],
			"format": "uri"
		}
	},
	"$ref": "#/$defs/Profile"
}