{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"email",
		"label",
		"location",
		"name",
		"profiles",
		"summary"
	],
	"properties": {
		"email": {
			"type": "string",
			"description": "an Email address string matching the pattern ^(?!\\.)(?!.*\\.\\.)([A-Z0-9_+-.]*)[A-Z0-9_+-]@([A-Z0-9][A-Z0-9-]*\\.)+[A-Z]{2,}$",
			"title": "Email",
			"examples": [
				"<local-part>@<domain>",
				"foo@bar.com",
				"foo.bar@baz.com"
			],
			"format": "email",
			"pattern": "^(?!\\.)(?!.*\\.\\.)([A-Z0-9_+-.]*)[A-Z0-9_+-]@([A-Z0-9][A-Z0-9-]*\\.)+[A-Z]{2,}$"
		},
		"image": {
			"type": "string",
			"description": "URL to a image in JPEG or PNG format (as per RFC 3986)",
			"title": "image",
			"examples": [
				"https://example.com",
				"https://example.com/#section",
				"http://example.com:8080",
				"http://üçåüçåüçå.ws",
				"https://www.√ºbercool.de"
			],
			"format": "uri"
		},
		"label": {
			"type": "string",
			"description": "Label",
			"title": "label",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"examples": [
				"Web Developer"
			],
			"minLength": 1
		},
		"location": {
			"type": "object",
			"required": [
				"city",
				"countryCode"
			],
			"properties": {
				"address": {
					"type": "string",
					"description": "To add multiple address lines, use \"\\n\".",
					"title": "address",
					"examples": [
						"1234 Gl√ºcklichkeit Stra√üe\nHinterhaus 5. Etage li."
					],
					"minLength": 1,
					"pattern": "^[^\\s].*[^\\s]$"
				},
				"city": {
					"type": "string",
					"description": "City",
					"title": "city",
					"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
					"examples": [
						"Berlin",
						"New York",
						"San Francisco"
					],
					"minLength": 1
				},
				"countryCode": {
					"type": "string",
					"description": "Country code as per ISO-3166-1 ALPHA-2",
					"title": "countryCode",
					"examples": [
						"US",
						"AU",
						"IN"
					],
					"minLength": 2,
					"maxLength": 2,
					"pattern": "^[A-Z]{2}$"
				},
				"postalCode": {
					"type": "string",
					"description": "European postal code",
					"title": "postalCode",
					"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
					"examples": [
						"12209"
					],
					"minLength": 1
				},
				"region": {
					"type": "string",
					"description": "The general region where you live. Can be a US state, or a province",
					"title": "region",
					"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
					"examples": [
						"California",
						"Quebec"
					],
					"minLength": 1
				}
			},
			"additionalProperties": false
		},
		"name": {
			"type": "string",
			"description": "Your full name",
			"title": "name",
			"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
			"examples": [
				"Thomas Anderson"
			],
			"minLength": 1
		},
		"phone": {
			"type": "string",
			"description": "Phone numbers are stored as strings so use any format you like, as long as it is a valid phone number. E.164 format is recommended.",
			"title": "phone",
			"examples": [
				"712-117-2923"
			],
			"pattern": "^\\+[1-9]\\d{1,14}$"
		},
		"profiles": {
			"type": "array",
			"items": {
				"type": "object",
				"required": [
					"network",
					"url",
					"username"
				],
				"properties": {
					"network": {
						"type": "string",
						"description": "The name of the social network",
						"title": "network",
						"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
						"examples": [
							"Facebook",
							"Twitter"
						],
						"minLength": 1
					},
					"url": {
						"type": "string",
						"description": "The URL of the profile on the social network",
						"title": "url",
						"examples": [
							"http://twitter.example.com/neutralthoughts"
						],
						"format": "uri"
					},
					"username": {
						"type": "string",
						"description": "The username of the profile on the social network",
						"title": "username",
						"pattern": "^\\S[\\s\\S]*\\S$|^\\S$|^$",
						"examples": [
							"neutralthoughts"
						],
						"minLength": 1
					}
				},
				"additionalProperties": false
			},
			"description": "Specify any number of social networks that you participate in",
			"title": "profiles"
		},
		"summary": {
			"type": "string",
			"description": "Write a short 2-3 sentence biography about yourself",
			"title": "summary",
			"examples": [
				"Web Developer with a passion for web-based applications"
			],
			"minLength": 1,
			"pattern": "^[^\\s].*[^\\s]$"
		},
		"url": {
			"type": "string",
			"description": "URL (as per RFC 3986) to your website, e.g. personal homepage",
			"title": "url",
			"examples": [
				"http://thomasanderson.com"
			],
			"format": "uri"
		}
	},
	"additionalProperties": false
}